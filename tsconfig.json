{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "noEmit": true,
    "module": "es6",
    "target": "es2017",
    "lib": ["es2017", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["./src", "./jest.setup.ts"],
  "exclude": ["./node_modules/*"]
}
